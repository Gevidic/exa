import java.util.ArrayList;
import java.util.Scanner;

class Mascota {
    String especie;
    String caracteristicas;
    double precio;
    int cantidadEnTienda;
    int cantidadVendida;

    public Mascota(String especie, String caracteristicas, double precio, int cantidadEnTienda) {
        this.especie = especie;
        this.caracteristicas = caracteristicas;
        this.precio = precio;
        this.cantidadEnTienda = cantidadEnTienda;
        this.cantidadVendida = 0;
    }

    public int getCantidadRestante() {
        return cantidadEnTienda - cantidadVendida;
    }

    public void vender(int cantidad) {
        if (cantidad <= getCantidadRestante()) {
            cantidadVendida += cantidad;
            System.out.println("‚úÖ Venta realizada: " + cantidad + " " + especie);
        } else {
            System.out.println("‚ùå No hay suficiente stock de " + especie + " para vender " + cantidad);
        }
    }

    public void mostrarInfo() {
        System.out.println("üê∂ Especie: " + especie);
        System.out.println("üìå Caracter√≠sticas: " + caracteristicas);
        System.out.println("üíµ Precio: $" + precio);
        System.out.println("üì¶ En tienda: " + cantidadEnTienda);
        System.out.println("üõí Vendidas: " + cantidadVendida);
        System.out.println("üìâ Restantes: " + getCantidadRestante());
        System.out.println("----------------------------------");
    }
}

public class TiendaMascotas {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        ArrayList<Mascota> inventario = new ArrayList<>();

        // A√±adir mascotas al inventario
        inventario.add(new Mascota("Perro", "Raza Labrador, 6 meses", 150.0, 10));
        inventario.add(new Mascota("Gato", "Raza Persa, 4 meses", 120.0, 8));
        inventario.add(new Mascota("Loro", "Hablador, colores vivos", 90.0, 5));

        int opcion;

        do {
            System.out.println("\n--- üêæ Men√∫ Tienda de Mascotas ---");
            System.out.println("1. Ver inventario");
            System.out.println("2. Vender mascota");
            System.out.println("3. Salir");
            System.out.print("Selecciona una opci√≥n: ");
            opcion = scanner.nextInt();
            scanner.nextLine(); // Limpiar buffer

            switch (opcion) {
                case 1:
                    System.out.println("\nüìã Inventario actual:");
                    for (Mascota m : inventario) {
                        m.mostrarInfo();
                    }
                    break;

                case 2:
                    System.out.print("Especie a vender: ");
                    String especie = scanner.nextLine();
                    System.out.print("Cantidad a vender: ");
                    int cantidad = scanner.nextInt();
                    scanner.nextLine(); // Limpiar buffer

                    boolean encontrada = false;
                    for (Mascota m : inventario) {
                        if (m.especie.equalsIgnoreCase(especie)) {
                            m.vender(cantidad);
                            encontrada = true;
                            break;
                        }
                    }

                    if (!encontrada) {
                        System.out.println("‚ùó Especie no encontrada en el inventario.");
                    }
                    break;

                case 3:
                    System.out.println("¬°Gracias por usar el sistema de inventario!");
                    break;

                default:
                    System.out.println("‚ö†Ô∏è Opci√≥n no v√°lida.");
                    break;
            }
        } while (opcion != 3);

        scanner.close();
    }
}
