import java.util.Scanner;

public class TiendaMascotas {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Inventario inventario = new Inventario();

        // Agregar algunas mascotas
        inventario.agregarMascota(new Mascota("Perro", "Labrador, 6 meses", 150.0, 10));
        inventario.agregarMascota(new Mascota("Gato", "Persa, 4 meses", 120.0, 8));
        inventario.agregarMascota(new Mascota("Loro", "Hablador, colores vivos", 90.0, 5));

        int opcion;

        do {
            System.out.println("\n--- MenÃº Tienda de Mascotas ---");
            System.out.println("1. Ver inventario");
            System.out.println("2. Vender mascota");
            System.out.println("3. Salir");
            System.out.print("Selecciona una opciÃ³n: ");
            opcion = scanner.nextInt();
            scanner.nextLine(); // Limpiar buffer

            switch (opcion) {
                case 1:
                    System.out.println("\nğŸ“‹ Inventario actual:");
                    inventario.mostrarInventario();
                    break;

                case 2:
                    System.out.print("Especie a vender: ");
                    String especie = scanner.nextLine();
                    System.out.print("Cantidad a vender: ");
                    int cantidad = scanner.nextInt();
                    scanner.nextLine();

                    if (inventario.existeEspecie(especie)) {
                        if (inventario.venderMascota(especie, cantidad)) {
                            System.out.println("âœ… Venta realizada de " + cantidad + " " + especie);
                        } else {
                            System.out.println("âŒ No hay suficientes " + especie + " en inventario.");
                        }
                    } else {
                        System.out.println("â— Especie no encontrada en el inventario.");
                    }
                    break;

                case 3:
                    System.out.println("ğŸ‘‹ Â¡Gracias por usar el sistema!");
                    break;

                default:
                    System.out.println("âš ï¸ OpciÃ³n no vÃ¡lida.");
                    break;
            }

        } while (opcion != 3);

        scanner.close();
    }
}
