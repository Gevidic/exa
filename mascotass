public class Mascota {
    private String especie;
    private String caracteristicas;
    private double precio;
    private int cantidadTotal;
    private int cantidadVendida;

    public Mascota(String especie, String caracteristicas, double precio, int cantidadTotal) {
        this.especie = especie;
        this.caracteristicas = caracteristicas;
        this.precio = precio;
        this.cantidadTotal = cantidadTotal;
        this.cantidadVendida = 0;
    }

    public String getEspecie() {
        return especie;
    }

    public int getCantidadRestante() {
        return cantidadTotal - cantidadVendida;
    }

    public boolean vender(int cantidad) {
        if (cantidad <= getCantidadRestante()) {
            cantidadVendida += cantidad;
            return true;
        }
        return false;
    }

    public void mostrarInfo() {
        System.out.println("ðŸ¾ Especie: " + especie);
        System.out.println("ðŸ“Œ CaracterÃ­sticas: " + caracteristicas);
        System.out.println("ðŸ’µ Precio: $" + precio);
        System.out.println("ðŸ“¦ En tienda: " + cantidadTotal);
        System.out.println("ðŸ›’ Vendidas: " + cantidadVendida);
        System.out.println("ðŸ“‰ Restantes: " + getCantidadRestante());
        System.out.println("----------------------------------");
    }
}
